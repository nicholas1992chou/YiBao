<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/goodsPic_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/user2"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/goodsPic_iv"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/goodsName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/goodsName"
                />
            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/goodsPrice"
                />
            <TextView
                android:id="@+id/originalPrice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/goodsPrice"
                android:textSize="12sp"
                android:textColor="@color/header_pressed"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>