<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_small"
        >
        <com.bwf.yibao.Yibao.views.ViewpagerIndicator
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:visibleCount = "3"
            app:indicatorColor="@color/header_normal"
            >
            <TextView
                android:id="@+id/tv_tab_01"
                style="@style/text_indicator"
                android:text="已收藏"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@null"
                android:textSize="@dimen/textsize_xlarge"
                />
            <TextView
                android:id="@+id/tv_tab_02"
                style="@style/text_indicator"
                android:text="已发布"
                android:gravity="center"
                android:drawableRight="@null"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/textsize_xlarge"
                />
            <TextView
                android:id="@+id/tv_tab_03"
                style="@style/text_indicator"
                android:text="已购买"
                android:gravity="center"
                android:drawableRight="@null"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/textsize_xlarge"
                />
        </com.bwf.yibao.Yibao.views.ViewpagerIndicator>

    </LinearLayout>

</RelativeLayout>
   <ListView
       android:id="@+id/listView_goodsList"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   </ListView>
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:text="当前无数据..."
        android:textSize="@dimen/textsize_xlarge"
        android:gravity="center"
        />
</LinearLayout>